<WidgetsUI>:
    orientation: "vertical"
    spacing: "10dp"

    MDTopAppBar:
        title: "GPA Forecaster"

    MDBoxLayout:
        orientation: "horizontal"
        size_hint_y: None
        height: "60dp"
        padding: "10dp"
        spacing: "10dp"

        MDLabel:
            text: "Degree Length (Semesters):"
            size_hint_x: 0.4
            halign: "left"

        MDDropDownItem:
            id: semester_dropdown
            text: "Select"
            on_release: app.menu.open()

    ScrollView:
        MDBoxLayout:
            id: scroll_container
            orientation: "vertical"
            spacing: "30dp"  # Creates space between sections for each semester
            padding: "20dp"  # Space around the edges of the entire scroll container
            adaptive_height: True
            size_hint_y: None

    MDLabel:
        id: degree_marks_title
        text: "Degree Marks"
        font_size: root.degree_marks_title_font_size
        halign: "center"
        size_hint_y: None
        height: self.texture_size[1]
        bold: True

    MDGridLayout:
        id: degree_marks_output_box
        cols: 3 # Start with 3 columns
        adaptive_height: True
        spacing: "10dp"
        padding: [20, 0, 20, 20]  # [left, top, right, bottom]
        cols_default_height: "10dp"

        MDLabel:
            id: wam_label
            text: "WAM: 0.0 F"
            font_size: root.degree_marks_text_font_size
            halign: "center"
            size_hint_y: None
            height: self.texture_size[1]
            bold: True

        MDLabel:
            id: gpa4_label
            halign: "center"
            text: "GPA (4-point scale): 0.0"
            font_size: root.degree_marks_text_font_size
            height: self.texture_size[1]
            size_hint_y: None
            bold: True

        MDLabel:
            id: gpa7_label
            halign: "center"
            text: "GPA (7-point scale): 0.0"
            font_size: root.degree_marks_text_font_size
            size_hint_y: None
            height: self.texture_size[1]
            bold: True
