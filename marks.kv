<WidgetsUI>:
    orientation: "vertical"
    spacing: "10dp"

    MDTopAppBar:
        title: "GPA Forecaster"

    MDBoxLayout:
        orientation: "horizontal"
        size_hint_y: None
        height: "60dp"
        padding: "10dp"
        spacing: "10dp"

        MDLabel:
            text: "Degree Length:"
            size_hint_x: 0.4
            halign: "left"

        MDDropDownItem:
            id: semester_dropdown
            text: "Select"
            on_release: app.menu.open()

    ScrollView:
        MDBoxLayout:
            id: scroll_container
            orientation: "vertical"
            spacing: "30dp"  # Creates space between sections for each semester
            padding: "20dp"  # Space around the edges of the entire scroll container
            adaptive_height: True
            size_hint_y: None

    MDRectangleFlatButton:
        text: "Calculate Marks"
        size_hint: None, None
        size: "200dp", "48dp"
        pos_hint: {"center_x": 0.5}
        on_release: app.display_marks_to_interface()

    MDGridLayout:
        id: degree_marks_output_box
        cols: 3 # Start with 3 columns
        adaptive_height: True
        spacing: "10dp"
        padding: "20dp"
        cols_default_height: "10dp"

        MDLabel:
            id: wam_label
            text: "WAM: -- --"
            font_style: "H6"
            halign: "center"
            theme_text_color: "Primary"
            markup: True
            size_hint: (1, None)
            height: self.texture_size[1] + dp(8)
            text_size: self.width, None
            shorten: False

        MDLabel:
            id: gpa4_label
            halign: "center"
            text: "GPA (4-point scale): --"
            theme_text_color: "Primary"
            font_style: "H6"
            size_hint_x: 1
            size_hint_y: None
            height: dp(32)  # fixed height for consistent layout
            text_size: self.size  # allows text to fill the entire cell and wrap properly if needed
            shorten: False
            markup: True

        MDLabel:
            id: gpa7_label
            halign: "center"
            text: "GPA (7-point scale): --"
            theme_text_color: "Primary"
            font_style: "H6"
            size_hint_x: 1
            size_hint_y: None
            height: dp(32)  # fixed height for consistent layout
            text_size: self.size  # allows text to fill the entire cell and wrap properly if needed
            shorten: False
            markup: True
